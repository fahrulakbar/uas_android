<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.myapp.ayatayatsukses.DisplayData">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_id"
        android:gravity="center"
        android:background="@drawable/customborder"
        android:textColor="#000"
        android:backgroundTint="#fff"
        android:textSize="17sp"
        android:text="Nama Ayat"
        />

    <TextView
        android:id="@+id/tv_isi"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/customborder"
        android:text="Isi Ayat"
        android:textColor="#000"
        android:backgroundTint="#fff"
        android:textSize="22sp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/tv_arti"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tv_isi"
        android:background="@drawable/customborder"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:backgroundTint="#fff"
        android:textSize="20sp"
        android:text="Arti Ayat"
        />

    <Button
        android:id="@+id/kembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_arti"
        android:layout_marginTop="60dp"
        android:background="@drawable/customborder"
        android:text="KEMBALI"
        android:textColor="#fff"
        android:backgroundTint="#9977DB"
        android:onClick="kembaliMenu"
        />

</LinearLayout>
